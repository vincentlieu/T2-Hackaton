
<div class="container">
  <div class="index-container">
        <%= link_to "Create Room", new_room_path, class: "button is-primary" %>
        <% if @rooms.present? %>
          <nav class="nav flex-column">
            <% for room in @rooms %>
              <ul><%= link_to room.title, room_path(room) %></ul>
            <% end %>
          </nav>
        <% else %>
          <div class="text-muted">
            There are no rooms
          </div>
        <% end %>
    </div>
  </div>
</div>

